<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="5dp" >

    <LinearLayout
        android:id="@+id/lnrCreateAlbum"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:visibility="gone" >

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="3dp"
            android:gravity="center_horizontal|center_vertical"
            android:orientation="vertical"
            android:padding="5dp" >

            <com.ijoomer.customviews.IjoomerEditText
                android:id="@+id/edtAlbumName"
                style="?edittext_h2"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:hint="@string/album_name"
                android:singleLine="true" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="3dp" >

                <com.ijoomer.customviews.IjoomerEditText
                    android:id="@+id/edtAlbumLocation"
                    style="?edittext_h2"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:hint="@string/locaton"
                    android:singleLine="true" />

                <ImageView
                    android:id="@+id/imgMap"
                    android:layout_width="35dp"
                    android:layout_height="35dp"
                    android:padding="2dp"
                    android:src="@drawable/jom_map_pin" />
            </LinearLayout>

            <com.ijoomer.customviews.IjoomerEditText
                android:id="@+id/edtAlbumDescription"
                style="?edittext_h2"
                android:layout_width="fill_parent"
                android:layout_height="120dp"
                android:layout_marginTop="3dp"
                android:gravity="top|left"
                android:hint="@string/description" />

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_margin="5dp" >

                <com.ijoomer.customviews.IjoomerTextView
                    android:id="@+id/txtAlbumWhoCanSee"
                    style="?textview_h3"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_weight="1"
                    android:text="@string/who_can_see" />

                <Spinner
                    android:id="@+id/spnWhoCanSee"
                    style="?spinner"
                    android:layout_width="120dp"
                    android:layout_height="wrap_content" />
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:orientation="horizontal"
            android:padding="10dp" >

            <com.ijoomer.customviews.IjoomerButton
                android:id="@+id/btnCancle"
                style="?button"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@string/cancel" />

            <com.ijoomer.customviews.IjoomerButton
                android:id="@+id/btnSave"
                style="?button"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="2dp"
                android:layout_weight="1"
                android:text="@string/save" />
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical" >

        <LinearLayout
            android:id="@+id/lnrAlbumDetail"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:visibility="visible" >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical" >

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="3dp"
                    android:background="@drawable/jom_wall_activity_topbox"
                    android:orientation="vertical"
                    android:padding="5dp" >

                    <LinearLayout
                        android:id="@+id/lnrAlbum"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal" >

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical" >

                            <ImageView
                                android:id="@+id/imgAlbumAvatar"
                                android:layout_width="70dp"
                                android:layout_height="70dp"
                                android:adjustViewBounds="true"
                                android:background="@drawable/jom_album_photo_bg"
                                android:scaleType="fitXY" />
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical"
                            android:layout_weight="1"
                            android:orientation="vertical"
                            android:padding="5dp" >

                            <com.ijoomer.customviews.IjoomerTextView
                                android:id="@+id/txtAlbumTitle"
                                style="?textview_h3"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:singleLine="true" />

                            <com.ijoomer.customviews.IjoomerTextView
                                android:id="@+id/txAlbumBy"
                                style="?textview_h2"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:singleLine="true" />

                            <com.ijoomer.customviews.IjoomerTextView
                                android:id="@+id/txtAlbumDateLocation"
                                style="?textview_h2"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:scrollHorizontally="true"
                                android:singleLine="true" />

                            <com.ijoomer.customviews.IjoomerTextView
                                android:id="@+id/txtAlbumPrivacy"
                                style="?textview_h2"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:singleLine="true" />
                        </LinearLayout>
                    </LinearLayout>

                    <com.ijoomer.customviews.IjoomerTextView
                        android:id="@+id/txtAlbumDescription"
                        style="?textview_h2"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:maxLines="2"
                        android:scrollbars="vertical" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/jom_wall_activity_bottombox"
                    android:orientation="vertical"
                    android:padding="5dp"
                    android:visibility="visible" >

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content" >

                        <com.ijoomer.customviews.IjoomerTextView
                            android:id="@+id/txtAlbumLikeCount"
                            style="?textview_h2"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_margin="3dp"
                            android:drawableLeft="@drawable/ijoomer_like_icon"
                            android:drawablePadding="2dp" />

                        <com.ijoomer.customviews.IjoomerTextView
                            android:id="@+id/txtAlbumDislikeCount"
                            style="?textview_h2"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_margin="3dp"
                            android:drawableLeft="@drawable/ijoomer_dislike_icon"
                            android:drawablePadding="2dp" />

                        <com.ijoomer.customviews.IjoomerTextView
                            android:id="@+id/txtAlbumCommentCount"
                            style="?textview_h2"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_margin="3dp"
                            android:drawableLeft="@drawable/jom_comment"
                            android:drawablePadding="2dp" />

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:gravity="right" >

                            <com.ijoomer.customviews.IjoomerTextView
                                android:id="@+id/txtAlbumShare"
                                style="?textview_h2"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_margin="3dp"
                                android:drawableLeft="@drawable/jom_share"
                                android:drawablePadding="2dp"
                                android:text="@string/share" />
                        </LinearLayout>
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/lnrPhotoList"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:orientation="vertical" >
            
            <com.ijoomer.customviews.IjoomerButton
                android:id="@+id/btnUploadPhoto"
                style="?button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="right"
                android:layout_margin="5dp"
                android:visibility="gone"
                android:text="@string/upload_photo" />

            <android.support.v4.view.ViewPager
                android:id="@+id/viewPager"
                android:layout_width="fill_parent"
                android:layout_height="270dp"
                android:layout_gravity="center_vertical|center_horizontal"
                android:layout_margin="5dp"
                android:background="@drawable/jom_wall_activity_topbox" />

            <com.ijoomer.page.indicator.CirclePageIndicator
                android:id="@+id/indicator"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:padding="5dp" >
            </com.ijoomer.page.indicator.CirclePageIndicator>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/lnrAlbumWriteComment"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:visibility="visible" >

            <com.ijoomer.customviews.IjoomerEditText
                android:id="@+id/edtAlbumWriteComment"
                style="?edittext_h2"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginRight="3dp"
                android:layout_weight="1"
                android:gravity="top|left"
                android:hint="@string/write_comment"
                android:lines="3"
                android:maxLines="3" />

            <com.ijoomer.customviews.IjoomerButton
                android:id="@+id/btnSend"
                style="?button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:text="@string/send" />
        </LinearLayout>
    </LinearLayout>

</LinearLayout>