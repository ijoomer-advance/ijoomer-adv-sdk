<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="10dp" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/jom_wall_activity_topbox"
        android:orientation="vertical"
        android:padding="5dp" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal" >

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical" >

                <ImageView
                    android:id="@+id/imgWallOrActvityUserAvatar"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:adjustViewBounds="true"
                    android:scaleType="fitXY"
                    android:layout_gravity="center"
                    android:src="@drawable/ic_launcher" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_weight="1"
                android:orientation="vertical" >

                <com.ijoomer.customviews.IjoomerTextView
                    android:id="@+id/txtWallOrActvityUserName"
                    style="?textview_h3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="3dp"
                    android:singleLine="true"
                    android:text="Haresh Chhelana" />

                <com.ijoomer.customviews.IjoomerTextView
                    android:id="@+id/txtWallOrActvityDate"
                    style="?textview_h2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="3dp"
                    android:singleLine="true"
                    android:text="3 days ago" />
            </LinearLayout>

            <com.ijoomer.customviews.IjoomerButton
                android:id="@+id/btnWallOrActivityRemove"
                android:layout_width="16dp"
                android:layout_height="16dp"
                android:background="@drawable/wall_remove"
                android:padding="2dp"
                android:visibility="gone" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:orientation="vertical"
            android:padding="2dp" >

            <com.ijoomer.customviews.IjoomerTextView
                android:id="@+id/txtWallOrActvityTitle"
                style="?textview_h2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <com.ijoomer.customviews.IjoomerTextView
                android:id="@+id/txtWallOrActvityContent"
                style="?textview_h2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="3dp"
                android:visibility="gone" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/lnrWallOrActivityContentImage"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical|center_horizontal"
            android:padding="15dp"
            android:visibility="gone" >

            <HorizontalScrollView
                android:id="@+id/hrzContentImage"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:scrollbars="none" >

                <LinearLayout
                    android:id="@+id/lnrContentImageScrollable"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" >
                </LinearLayout>
            </HorizontalScrollView>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/lnrWallOrActivityContentVideo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical|center_horizontal"
            android:padding="3dp"
            android:visibility="gone" >

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" >

                <ImageView
                    android:id="@+id/imgWallOrActvityContentVideoImage"
                    android:layout_width="250dp"
                    android:layout_height="190dp"
                    android:adjustViewBounds="true"
                    android:scaleType="fitXY" />

                <ImageView
                    android:id="@+id/imgUserImage"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:src="@drawable/jom_wall_video_play" />
            </RelativeLayout>
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/lnrWallOrActivityWriteComment"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="5dp"
        android:paddingTop="5dp"
        android:visibility="gone" >

        <com.ijoomer.customviews.IjoomerEditText
            android:id="@+id/edtWallOrActivityWriteComment"
            style="?edittext_h2"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="top|left"
            android:hint="@string/write_comment"
            android:lines="3"
            android:maxLines="3" />

        <com.ijoomer.customviews.IjoomerButton
            android:id="@+id/btnWallOrActivityWriteCommentSend"
            style="?button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="3dp"
            android:text="@string/send" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/lnrWallOrActivityLikeCommnet"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/jom_wall_activity_bottombox"
        android:padding="5dp" >

        <com.ijoomer.customviews.IjoomerTextView
            android:id="@+id/txtWallOrActivityLike"
            style="?textview_h2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="3dp"
            android:text="Like" />

        <com.ijoomer.customviews.IjoomerTextView
            android:id="@+id/txtWallOrActivityComment"
            style="?textview_h2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="3dp"
            android:text="Comment" />

        <com.ijoomer.customviews.IjoomerTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1" />

        <com.ijoomer.customviews.IjoomerTextView
            android:id="@+id/txtWallOrActivityLikeCount"
            style="?textview_h2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="3dp"
            android:drawableLeft="@drawable/jom_like_icon"
            android:drawablePadding="2dp" />

        <com.ijoomer.customviews.IjoomerTextView
            android:id="@+id/txtWallOrActivityCommentCount"
            style="?textview_h2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="3dp"
            android:drawableLeft="@drawable/jom_comment"
            android:drawablePadding="2dp" />
    </LinearLayout>

</LinearLayout>