<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical" >

    <LinearLayout
        android:id="@+id/lnrGroupItem"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        android:orientation="vertical" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/ijoomer_wall_activity_topbox"
            android:orientation="vertical" >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="5dp" >

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal" >

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_gravity="center_vertical"
                        android:orientation="vertical" >

                        <ImageView
                            android:id="@+id/imgGroupAvatar"
                            android:layout_width="65dp"
                            android:layout_height="70dp"
                            android:adjustViewBounds="true"
                            android:scaleType="fitXY"
                            android:src="@drawable/ic_launcher" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="5dp"
                        android:layout_weight="1"
                        android:orientation="vertical"
                        android:padding="2dp" >

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:gravity="center_vertical"
                            android:orientation="vertical" >

                            <com.ijoomer.customviews.IjoomerTextView
                                android:id="@+id/txtGroupTitle"
                                style="?jom_textview_blue_h3"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content" />

                            <com.ijoomer.customviews.IjoomerTextView
                                android:id="@+id/txtGroupDescription"
                                style="?jom_textview_h2"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:ellipsize="marquee"
                                android:maxLines="2" />
                        </LinearLayout>
                    </LinearLayout>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="3dp" >

                    <com.ijoomer.customviews.IjoomerTextView
                        android:id="@+id/txtGroupMember"
                        style="?jom_textview_h2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:drawableLeft="@drawable/jom_event_guest"
                        android:drawablePadding="2dp" />

                    <com.ijoomer.customviews.IjoomerTextView
                        android:id="@+id/txtGroupDiscussion"
                        style="?jom_textview_h2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:drawableLeft="@drawable/jom_group_discussion"
                        android:drawablePadding="2dp" />

                    <com.ijoomer.customviews.IjoomerTextView
                        android:id="@+id/txtGroupWallPost"
                        style="?jom_textview_h2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:drawableLeft="@drawable/jom_group_wall_post"
                        android:drawablePadding="2dp" />
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/lnrGroupPending"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/ijoomer_wall_activity_bottombox"
            android:orientation="vertical"
            android:padding="5dp"
            android:visibility="visible" >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content" >

                <com.ijoomer.customviews.IjoomerTextView
                    android:id="@+id/txtGroupPendingAccept"
                    style="?jom_textview_h2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="15dp"
                    android:drawableLeft="@drawable/jom_event_guest_as_admin_member"
                    android:drawablePadding="3dp"
                    android:text="@string/accept" />

                <com.ijoomer.customviews.IjoomerTextView
                    android:id="@+id/txtGroupPendingReject"
                    style="?jom_textview_h2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:drawableLeft="@drawable/wall_remove"
                    android:drawablePadding="3dp"
                    android:text="@string/reject" />
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

</LinearLayout>